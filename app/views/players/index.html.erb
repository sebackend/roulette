<div style="margin-top:90px;padding:0 20px">
  <p id="notice"><%= notice %></p>

  <h1>
    Jugadores    
  </h1>
  <%= link_to 'Nuevo Jugador', new_player_path, class:'button' %>

  <table style="max-width: 500px">
    <thead>
      <tr>
        <th>Name</th>
        <th>Money</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @players.each do |player| %>
        <tr>
          <td><%= player.name %></td>
          <td><%= player.money %></td>
          <td><%= link_to 'Show', player %></td>
          <td><%= link_to 'Edit', edit_player_path(player) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>